   <div class="container">
     <%= link_to "戻る", :back ,class:"btn"%>
      <div class="row">
        <div class="col-lg-4">
          <%= render "users/show" , user:@user %>
        </div>

        <div class="col-lg-8">
          <% @posts.each do |post| %>
            <div class="card mb-3">
              <div class="row">
                <div class="col-lg-3">
                  <div class="border p-3">
                    <%= link_to post_path(post.id) do %>
                      <%= attachment_image_tag post,:post_image,fallback:"no_image.png",class:"card-img-top"; %>
                    <% end %>
                  </div>
                </div>
                <div class="col-lg-9">
                  <div class="card-body">
                    <p class="card-text">種別:<%= post.protein_type %></p>
                    <p class="card-title text-truncate">名称:<%= post.name %></p>
                    <p class="card-text text-truncate">説明:<%= post.body %></p>
                    <% if post.favorite_by?(current_user) %>
                      <%= link_to post_favorite_path(post.id , post.favorites.ids) , method: :delete do %>
                        <i class="fas fa-thumbs-up fa-2x" style="color:blue;"></i><span class="ml-2"><%= post.favorites.count %>いいね</span>
                      <% end %>
                    <% else %>
                      <%= link_to post_favorites_path(post.id),method: :post do %>
                        <i class="fas fa-thumbs-up fa-2x" style="color:gray;"></i><span class="ml-2"><%= post.favorites.count %>いいね</span>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>