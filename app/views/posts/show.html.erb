<div class="container mt-3">
  <div class="row">
    <div class="col-lg-7">
      <div class="card">
        <div class="row">
          <div class="col-lg-3">
            <div class="border p-3">
            <%= attachment_image_tag @post,:post_image,fallback:"no_image.png",class:"card-img-top" %>
            </div>
            <div class="ml-3">
              <p>ユーザー情報</p>
              <%= link_to user_path(@post.user.id) do %>
                <%= attachment_image_tag @post.user,:profile_image,fallback:"no_image.png",size:"50x50",class:"rounded-circle" %>
              <% end %>
              <span class="text-truncate"><%= @post.user.name %></span>
            </div>
          </div>
          <div class="col-lg-9">
            <div class="card-body">
              <p class="card-title"><span>名称:</span><br><%= @post.name %></p>
              <p class="card-text"><span>種別:</span><br><%= @post.protein_type %></p>
              <p class="card-text"><span>説明:</span><br><%= @post.body %></p>
              <%= link_to "削除" ,post_path(@post.id),method: :delete,"data-confirm"=>"本当に削除していいですか？" ,class:"btn btn-danger"%>
              <%= link_to "編集" ,edit_post_path(@post.id),class:"btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-5 border">
      <table class="table hover">
        <% if @post.present? %>
          <h4>コメントはまだありません</h4>
        <% else %>
          <% @post.comments.each do |comment| %>
            <tr>
              <td class="text-center">
                <%= attachment_image_tag comment.user,:profile_image,fallback:"no_image.png",size:"50x50",class:"rounded-circle" %><br>
                <span><%= comment.user.name %></span>
              </td>
              <td class="pl-3"><%= comment.comment %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
      <div>
        <%= form_with(model:[@post , @comment],local:true) do |f| %>
          <%= f.text_area:comment ,class:"form-control" %><br>
          <%= f.submit "コメント",class:"btn btn-primary  mt-3" %><br>
        <% end %>
      </div>
    </div>
  </div>
</div>